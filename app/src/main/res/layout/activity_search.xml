<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_background"
    tools:context=".ui.search.SearchActivity">
        <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/search"
        app:navigationIconTint="@color/icon_base"
        app:navigationIcon="@drawable/arrow_back_icon"
        />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:paddingLeft="@dimen/offset_s"
            android:paddingRight="@dimen/offset_s">
                <FrameLayout
                    style="@style/InputLayout"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/search_input"
                            style="@style/Input"
                            android:layout_width="match_parent"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:hint="@string/search"
                        />
                        <ImageView
                            style="@style/InputCross"
                            android:id="@+id/search_cross"
                            android:visibility="gone"
                        />
                </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/search_history_header"
                    style="@style/SearchHeader"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="24dp"
                    android:gravity="center_vertical|center"
                    android:text="@string/search_history_header"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tracks_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/search_history_clear"
                    style="@style/BaseButton.ListButton"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/offset_s"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/offset_s"
                    android:text="@string/search_history_clear"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
                <ProgressBar
                    android:id="@+id/search_progress_bar"
                    style="@style/SearchProgressBar"
                    android:layout_gravity="center"
                    android:visibility="gone"
                />
                <TextView
                    android:id="@+id/tracks_view_placeholder"
                    style="@style/ListPlaceholderMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/offset_s"
                    android:paddingLeft="@dimen/offset_s"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:drawableTop="@drawable/not_found"
                    android:textAlignment="center"
                    android:text=""
                    tools:text="@string/network_error"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tracks_view_placeholder_reload"
                    style="@style/BaseButton.ListButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/offset_s"
                    android:visibility="gone"
                    android:text="@string/reload"
                />
        </LinearLayout>
</LinearLayout>