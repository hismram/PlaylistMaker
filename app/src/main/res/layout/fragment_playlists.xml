<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        style="@style/BaseButton.ListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/offset_s"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/offset_s"
        android:text="@string/new_playlist"
    />
    <TextView
        android:id="@+id/tracks_view_placeholder"
        style="@style/ListPlaceholderMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/offset_s"
        android:paddingLeft="@dimen/offset_s"
        android:layout_gravity="center"
        android:drawableTop="@drawable/not_found"
        android:textAlignment="center"
        android:text="@string/empty_playlists"
        tools:text="@string/empty_playlists"
    />
</FrameLayout>