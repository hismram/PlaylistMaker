<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:navigationIcon="@drawable/arrow_back_icon"

    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/offset_l"
        android:paddingLeft="@dimen/offset_m"
        android:paddingRight="@dimen/offset_m"
    >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dark_theme"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m"
                android:layout_gravity="center_vertical"
            />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                app:thumbTint="@color/gray"
                app:trackTint="@color/gray_light"
            />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/share_app"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m"
            />
            <FrameLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="@dimen/icon_m"
                    android:layout_height="@dimen/icon_m"
                    android:src="@drawable/share_icon"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/white"
                    android:padding="0dp"
                    android:contentDescription="@string/share_app"
                    />
            </FrameLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/write_to_support"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/support_icon"
                android:layout_gravity="end"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:contentDescription="@string/write_to_support"
            />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_row_height"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/terms_of_use"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_m"
            />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_forward_icon"
                android:layout_gravity="end"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:contentDescription="@string/terms_of_use"
            />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>