<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BaseButton.ListButton">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="BaseButton.MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/offset_2xs</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="cornerRadius">@dimen/menu_corner_radius</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/yp_white</item>
    </style>

    <style name="Switcher" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/SwitchOverlay</item>
    </style>
    
    <style name="SwitchOverlay">
        <item name="colorSurface">@color/yp_text_gray</item>
        <item name="colorOnSurface">@color/yp_light_gray</item>
        <item name="colorSecondary">@color/yp_blue</item>
    </style>

    <style name="ListPlaceholderMsg">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:indeterminateTint">@color/progress_bar</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/yp_blue</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="SearchHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="drawableTint">@color/icon_base</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackCover">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="TrackName">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/track_name</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="TrackAdditional">
        <item name="android:textColor">@color/track_additional</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_2xs</item>
    </style>

    <style name="TrackArtist" parent="TrackAdditional">
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDuration" parent="TrackAdditional">
        <item name="android:drawableStart">@drawable/dot</item>
        <item name="android:lines">1</item>
    </style>

    <style name="InputLayout">
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="LibraryTabsLayout">
        <item name="android:backgroundTint">@color/base_background</item>
        <item name="tabTextColor">@color/text_base</item>
        <item name="tabTextAppearance">@style/TabsTextApperance</item>
        <item name="tabIndicatorColor">@color/tabs_indicator</item>
    </style>

    <style name="TabsTextApperance">
        <item name="android:textColor"></item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="InputCross">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/clear_icon</item>
        <item name="android:padding">@dimen/offset_3xs</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="Input">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/input_text</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:drawablePadding">@dimen/offset_3xs</item>
        <item name="android:drawableStart">@drawable/search_icon_16</item>
        <item name="android:drawableTint">@color/input_icon</item>
        <item name="android:paddingLeft">@dimen/offset_2xs</item>
        <item name="android:paddingRight">@dimen/offset_2xl</item>
    </style>

    <style name="PlayerTrackMain">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/text_base</item>
    </style>

    <style name="PlayerTrackData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlayerTrackData.Label">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="PlayerTrackData.Data">
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_base</item>
        <item name="android:lines">1</item>
    </style>
</resources>